            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <CheckBox fx:id="fitToFrameDocument" layoutX="113.0" layoutY="181.0" mnemonicParsing="false" onAction="#fitToFrameDocumentsOption" text="Fit documents to frame " />
