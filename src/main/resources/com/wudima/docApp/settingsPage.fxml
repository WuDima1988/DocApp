   <children>
      <Button fx:id="cancelBtn" layoutX="-1.0" layoutY="531.0" mnemonicParsing="false" onAction="#switchToDataBase" prefHeight="49.0" prefWidth="385.0" style="-fx-background-color: #0f0f0e; -fx-border-color: #ffffff;" text="Cancel" textFill="WHITE">
