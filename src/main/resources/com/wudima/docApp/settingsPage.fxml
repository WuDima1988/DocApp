      <TextField fx:id="programeName" layoutX="203.0" layoutY="90.0" />
      <Button layoutX="113.0" layoutY="229.0" mnemonicParsing="false" onAction="#fileChooseLogo" text="Logo" />
      <TextField fx:id="logoName" layoutX="203.0" layoutY="229.0" />
   </children>
